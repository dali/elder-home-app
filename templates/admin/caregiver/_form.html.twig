{% form_theme form 'bootstrap_4_layout.html.twig' %}
{{ form_start(form) }}
<div class="card-body">
         <div class="row">
            <div class="col-md-6"> 
                     <div class="form-group">
                        {{ form_label(form.natIdCard) }}
                        {{ form_widget(form.natIdCard, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.user.firstName) }}
                        {{ form_widget(form.user.firstName, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.user.lastName) }}
                        {{ form_widget(form.user.lastName, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.user.email) }}
                        {{ form_widget(form.user.email, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.user.password.first) }}
                        {{ form_widget(form.user.password.first, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.user.password.second) }}
                        {{ form_widget(form.user.password.second, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="form-group">
                            {{ form_widget(form.user.roles, { value : 'ROLE_CAREGIVER' , 'attr': {'disabled':'disabled'} }) }}
                   </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.user.imageFile) }}
                    {{ form_widget(form.user.imageFile, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.user.birthdate) }}
                    {{ form_widget(form.user.birthdate, {'attr': {'class': 'form-control custom-select'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.startDate) }}
                    
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text">
                        <i class="far fa-calendar-alt"></i>
                      </span>
                    </div>
                   {{ form_widget(form.startDate, {'attr': {'class': 'form-control custom-select'}}) }}
                  </div>
                </div>
                 <div class="form-group">
                    {{ form_label(form.leftDate) }}
                    
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text">
                        <i class="far fa-calendar-alt"></i>
                      </span>
                    </div>
                   {{ form_widget(form.leftDate, {'attr': {'class': 'form-control custom-select'}}) }}
                  </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.certificatedAt) }}
                    
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text">
                        <i class="far fa-calendar-alt"></i>
                      </span>
                    </div>
                   {{ form_widget(form.certificatedAt, {'attr': {'class': 'form-control custom-select'}}) }}
                  </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.user.phoneNumber) }}
                        <div class="input-group">
                        <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-phone"></i></span>
                        </div>
                         {{ form_widget(form.user.phoneNumber, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                   
                </div>
                 
                    {{ form_row(form.user.isActive, {label_attr: {class: 'switch-custom'} }) }}
                
             </div>
                 <div class="card-footer col-md-12">
                   <button class="btn btn-success col-md-2">{{ button_label|default('Save') }}</button>
                   <a href="{{ path('caregiver_index') }}" class="col-md-2 btn btn-default float-right">Cancel</a>
                </div> 
             
        </div>
                
   
</div>
{{ form_end(form) }} 
