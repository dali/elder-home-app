{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
  <div class="content-wrapper">
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark">Sous categorie</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">ADMIN</a></li>
              <li class="breadcrumb-item active">Dashboard v2</li>
            </ol>
          </div>
        </div>
      </div>
    </div>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                       <div class="card">
                                        <div class="card-header">
                                          <h3 class="card-title">Utilisateurs</h3>
                                             <div class="card-tools">
                                              <a class="btn btn-info" href="{{ path('user_new') }}">   <i class="fas fa-user-plus"></i> Ajouter</a>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                          <table id="example1" class="table table-bordered table-striped">
                                            <thead>
                                            <tr>
                                                
                                                <th>Avatar</th>
                                                <th>FirstName</th>
                                                <th>LastName</th>
                                                <th>Email</th>
                                                <th>Roles</th>
                                                <th>Birthdate</th>
                                                <th>Status</th>
                                                <th>PhoneNumber</th>
                                                <th>actions</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                                  {% for user in users %}
                                                      <tr>
                                                          <td>
                                                          <div class="widget-user-image">
                                                            <img src="{{ vich_uploader_asset(user) }}"  width="50px" class="img-circle elevation-2" alt="User Image">
                                                          </div>
                                                          </td>
                                                          <td>{{ user.firstName }}</td>
                                                          <td>{{ user.lastName }}</td>
                                                          <td>{{ user.email }}</td>
                                                          <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                                                          <td>{{ user.birthdate ? user.birthdate|date('d-m-Y') : '' }}</td>
                                                          <td>{{ user.isActive == true ? "<span class='right badge badge-success'>Activé</span>" : "<span class='right badge badge-danger'>Désactivé</span>" }}</td>
                                                        
                                                          <td>{{ user.phoneNumber }}</td>

                                                          <td>
                                                              <div class="btn-group btn-group-sm">
                                                               <a class="btn btn-info" href="{{ path('user_show', {'id': user.id}) }}">
                                                               <i class="fas fa-user-check"></i></a>
                                                               <a class="btn btn-warning" href="{{ path('user_edit', {'id': user.id}) }}">
                                                               <i class="fas fa-user-edit"></i></a>
                                                               <a class="btn btn-danger" href="">
                                                              <i class="fas fa-user-slash"></i></a>
                                                                          
                                                              </div>
                                                          </td>
                                                      </tr>
                                                  {% else %}
                                                      <tr>
                                                          <td colspan="12">no records found</td>
                                                      </tr>
                                                  {% endfor %}
                                            </tbody>
                                            <tfoot>
                                            <tr>
                                    
                                            </tr>
                                            </tfoot>
                                          </table>
                                        </div>
         
                    </div>

                </div>
            </div>

        </div>
    </section>
</div>
{% endblock %}
