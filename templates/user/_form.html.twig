
{{ form_start(form) }}
<div class="card-body">
        <div class="row">
            <div class="col-md-6"> 
                <div class="form-group">
                    <label for="inputName">{{ form_label(form.firstName) }}</label>
                    {{ form_widget(form.firstName, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="form-group">
                    <label for="inputName">{{ form_label(form.lastName) }}</label>
                    {{ form_widget(form.lastName, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="form-group">
                    <label for="">{{ form_label(form.email) }}</label>
                    {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
                </div>
                 <div class="form-group">
                    <label for="">{{ form_label(form.password.first) }}</label>
                    {{ form_widget(form.password.first, { 'attr': {'class': 'form-control'} }) }}
                </div>
                 <div class="form-group">
                    <label for="">{{ form_label(form.password.second) }}</label>
                    {{ form_widget(form.password.second, { 'attr': {'class': 'form-control'} }) }}
                </div>
               <div class="form-group">
                    <label for="">{{ form_label(form.roles) }}</label>
                    {{ form_widget(form.roles, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="">{{ form_label(form.imageFile) }}</label>
                    {{ form_widget(form.imageFile, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="form-group">
                    <label for="">{{ form_label(form.birthdate) }}</label>
                    {{ form_widget(form.birthdate, {'attr': {'class': 'form-control custom-select'}}) }}
                </div>
                
                <div class="form-group">
                    <label for="">{{ form_label(form.phoneNumber) }}</label>
                        <div class="input-group">
                        <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-phone"></i></span>
                        </div>
                         {{ form_widget(form.phoneNumber, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                   
                </div>
                  <div class="form-group">
                    {{ form_row(form.isActive, {label_attr: {class: 'switch-custom'} }) }}
                </div>
             </div>
                 <div class="card-footer col-md-12">
                   <button class="btn btn-success col-md-2">{{ button_label|default('Save') }}</button>
                   <a href="{{ path('user_index') }}" class="col-md-2 btn btn-default float-right">Cancel</a>
                </div> 
             
        </div>
        </div>
  



